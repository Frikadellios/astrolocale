{
  "type": "object",
  "properties": {
    "title": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "reference": {
      "type": "string"
    },
    "pubDate": {
      "type": "string",
      "format": "date-time"
    },
    "updatedDate": {
      "type": "string",
      "format": "date-time"
    },
    "previewImage": {
      "type": "string"
    },
    "secret": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "tag": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [
        "default"
      ]
    },
    "canonicalURL": {
      "type": "string"
    },
    "draft": {
      "type": "boolean"
    },
    "postLayout": {
      "type": "string",
      "enum": [
        "simple",
        "column"
      ],
      "default": "column"
    },
    "related": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  },
  "required": [
    "title"
  ],
  "additionalProperties": false,
  "$schema": "http://json-schema.org/draft-07/schema#"
}