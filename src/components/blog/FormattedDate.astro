---
interface Props {
	date: Date;
	includeTime?: boolean;
}
const { date, includeTime } = Astro.props;
const lang = Astro.currentLocale;
---
<time datetime={date.toISOString()}>
	{
		date.toLocaleDateString(lang, {
			year: 'numeric',
			month: 'long',
			day: 'numeric',
			hour: includeTime ? "numeric" : undefined,
			minute: includeTime ? "numeric" : undefined,
		})
	}
</time>